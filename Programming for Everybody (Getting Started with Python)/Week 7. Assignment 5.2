largest = None
smallest = None
while True:
    num = input("Enter a number: ")
    if num == "done":
        break
    try:
        num = int(num)
        if largest == smallest == None:
            largest = smallest = num
        elif num > largest:
            largest = num
        elif num < smallest:
            smallest = num
        else:
            continue
    except:
        print("Invalid input")
        continue

print("Maximum is", largest)
print("Minimum is", smallest)
